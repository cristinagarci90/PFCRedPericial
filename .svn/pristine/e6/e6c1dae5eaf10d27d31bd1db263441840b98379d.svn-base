<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" 
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core" 
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:p="http://primefaces.org/ui">
         

    <ui:composition template="/WEB-INF/facelets/templates/#{Login.usuarioRol}.xhtml">
	<ui:define name="title">
		Gesti√≥n Pericial - Maestro de Estados
	</ui:define>
        <ui:define name="content">
            
            <center>
    
    <h:form id="form">  
        
          <h3><bold>LISTADO DE ESTADOS</bold></h3>
        <br></br>
            <p:growl id="messages" showDetail="true"/>
            
            
                <p:dataTable id="estados" var="item" value="#{estadosManagedBean.listadoes}" style="width:900px"
                 paginator="true" rows="3"
                 paginatorTemplate="{RowsPerPageDropdown} {FirstPageLink} {PreviousPageLink} {CurrentPageReport} {NextPageLink} {LastPageLink}"
                 rowsPerPageTemplate="1,2,3,5" widgetVar="estados" editable="true" emptyMessage="No se encontraron estados">
                
                  
           
           <f:facet name="header"> 
               <h:outputText value="Buscar por todos los campos:" />  
               <p:inputText id="globalFilter" onkeyup="estados.filter()" style="width:150px" />
           </f:facet>  
                
               <p:column headerText="Tipo" style="width:100px" sortBy="#{item.tipo}" filterBy="#{item.tipo}" >
                   
                   
                        <h:outputText value="#{item.tipo}"/>
                   
                        
                   
                </p:column>
                
                
               <p:column headerText="Codigo" style="width:100px" sortBy="#{item.codigo}" filterBy="#{item.codigo}">
                  
                        <h:outputText value="#{item.codigo}"/>
                  
                </p:column>
                
                
                <p:column headerText="Descripcion" style="width:100px" sortBy="#{item.descripcion}" filterBy="#{item.descripcion}">
                        <h:outputText value="#{item.descripcion}"/>
                  </p:column>                                           
                
                
             
                
                <p:column>
                     <h:commandButton action="#{estadosManagedBean.Modificar(item)}" value="#{msg['modify']}"/>
                     
                </p:column>
                                       
                
                
                
                
                
             
                
                
            </p:dataTable>  
            
            
            
                
                
                
     
</h:form>  
                
                
   </center>           
</ui:define>

</ui:composition>
   
</html>           



