                                    </tr>
                                 
                                     <tr>
                                        <td colspan="8">

                                            <div align="center">
                                                <p:commandButton id="showDialogButton" type="button" value="#{msg['Remember_login']}" onclick="dlg.show()" />  
                                              
                                                 
                                            </div>
                                        </td>

                                    </tr>
                                    <tr><td colspan="8"><br /></td></tr>
                                </table>


                            </td>

