                                        <td colspan="4" align="left">
                                             <div align="center">
                                                 <p:inputText  value="#{Login.nombreUsu}" size="10" />
                                             </div>
                                        </td>
                                    </tr>
                                   
                                    <tr>
                                        <td  colspan="4" align="right"><span class="txt2"> 
                                                <strong><h:outputText value="#{msg['password']}" /> : </strong></span></td>
